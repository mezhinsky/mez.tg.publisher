# Application
NODE_ENV=development
PORT=3002

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tg_publisher?schema=public"

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Queue Settings
QUEUE_RATE_LIMIT_MAX=20
QUEUE_RATE_LIMIT_DURATION=1000
QUEUE_MAX_ATTEMPTS=5

# Main channel key (for publishing tg.post.published events)
MAIN_CHANNEL_KEY=mem_main

# External Events (for publishing events to articles service)
EVENTS_WEBHOOK_URL=http://localhost:3001/webhooks/telegram
EVENTS_WEBHOOK_SECRET=your_webhook_secret_here
